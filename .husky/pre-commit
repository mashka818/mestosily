#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Lint staged files
npx lint-staged

# Type check
echo "🔧 Type checking..."
npx tsc --noEmit

# Run tests
echo "🧪 Running tests..."
npm run test -- --passWithNoTests

# Build check
echo "🏗️  Build check..."
npm run build

echo "✅ Pre-commit checks passed!"

