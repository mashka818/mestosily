#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Lint all files
echo "🔍 Linting all files..."
npm run lint:check

# Type check
echo "🔧 Type checking..."
npx tsc --noEmit

# Run tests
echo "🧪 Running tests..."
npm run test -- --passWithNoTests

echo "✅ Pre-push checks passed!"

